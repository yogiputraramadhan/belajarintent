<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/explicitintent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:text="Klik disini untuk Explicit"/>
    <Button
        android:id="@+id/implicitintent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:text="Klik disini untuk Implicit"/>
    <Button
        android:id="@+id/kekedua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="20dp"
        android:layout_marginTop="120dp"
        android:layout_below="@id/implicitintent"/>
    <Button
        android:id="@+id/save1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save 1"
        android:textSize="20dp"
        android:layout_marginTop="120dp"
        android:layout_below="@id/implicitintent"
        android:layout_toRightOf="@id/kekedua"/>
    <Button
        android:id="@+id/save2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save 2"
        android:textSize="20dp"
        android:layout_marginTop="120dp"
        android:layout_below="@id/implicitintent"
        android:layout_toRightOf="@id/save1"/>
    <Button
        android:id="@+id/save3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save 3"
        android:textSize="20dp"
        android:layout_marginTop="120dp"
        android:layout_below="@id/implicitintent"
        android:layout_toRightOf="@id/save2"/>


</RelativeLayout>